<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"

    android:gravity="center"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView

        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        tools:cardBackgroundColor="@color/white"
        tools:cardCornerRadius="5dp"
        tools:cardElevation="2dp">
        <LinearLayout
            android:background="@color/white"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="30dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/help" />

            <com.kamaii.rider.utils.CustomTextViewBold
                android:textSize="14dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Need Any Help ?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.kamaii.rider.utils.CustomTextViewBold>
            <com.kamaii.rider.utils.CustomTextViewBold
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:text="You can alwlays reach out to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.kamaii.rider.utils.CustomTextViewBold>

            <com.kamaii.rider.utils.CustomTextViewBold
                android:textSize="12dp"
                android:layout_gravity="center"
                android:text="us anytime on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.kamaii.rider.utils.CustomTextViewBold>




        </LinearLayout>





        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/cardchat"
            android:background="@drawable/buttonroundhelp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/whatsupchat" />

            <com.kamaii.rider.utils.CustomTextViewBold
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Click to live chat on WhatsApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.kamaii.rider.utils.CustomTextViewBold>
        </LinearLayout>




            <LinearLayout
                android:background="@drawable/buttonroundhelp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/cardemail"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/cemail" />

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <com.kamaii.rider.utils.CustomTextViewBold

                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="support@kamaii.in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </com.kamaii.rider.utils.CustomTextViewBold>

                    <com.kamaii.rider.utils.CustomTextView

                        android:textSize="14dp"
                        android:text="Click here to drop on Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </com.kamaii.rider.utils.CustomTextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:background="@drawable/buttonroundhelp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/cardcall"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ccall" />

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <com.kamaii.rider.utils.CustomTextViewBold

                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="9909998404"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </com.kamaii.rider.utils.CustomTextViewBold>

                        <com.kamaii.rider.utils.CustomTextView

                            android:textSize="14dp"
                            android:text="Click here to Call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </com.kamaii.rider.utils.CustomTextView>
                    </LinearLayout>
                </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>