    <LinearLayout
        android:id="@+id/rel_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.7">

                <com.kamaii.rider.utils.CustomTextViewBold
                    android:id="@+id/CTVproductname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_18" />


                <com.kamaii.rider.utils.CustomTextViewBold
                    android:id="@+id/CTVvechieno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_15" />
                <com.kamaii.rider.utils.CustomTextViewBold

                    android:id="@+id/CTVproductprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    android:textColor="@color/black_off"
                    android:textSize="@dimen/text_size_15" />
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/layservicecharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kamaii.rider.utils.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:textColor="@color/black_off"
                        android:text="Service Charge:"
                        android:textSize="@dimen/text_size_11" />
                    <com.kamaii.rider.utils.CustomTextViewBold
                        android:layout_marginLeft="4dp"
                        android:id="@+id/tvs_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text=""
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>


                <LinearLayout
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">



                    <com.kamaii.rider.utils.CustomTextViewBold
                        android:id="@+id/tvquantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text=""
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12dp" />

                    <com.kamaii.rider.utils.CustomTextViewBold
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tvquantitydays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/IVproduct"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.kamaii.rider.utils.CustomTextViewBold
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More Detail"
                    android:textSize="12dp" />

            </LinearLayout>


            <LinearLayout
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <Switch
                    android:layout_marginRight="8dp"
                    android:id="@+id/swOnOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
                <ImageView
                    android:visibility="gone"
                    android:layout_marginRight="8dp"
                    android:id="@+id/ivDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_delete" />

                <ImageView

                    android:id="@+id/ivedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/edit"
                    android:tint="@color/colorPrimaryDark" />
            </LinearLayout>
        </LinearLayout>

        <com.kamaii.rider.utils.CustomTextView
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:id="@+id/tvdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text=""
            android:textSize="@dimen/text_size_12"
            />



    </LinearLayout>

</androidx.cardview.widget.CardView>