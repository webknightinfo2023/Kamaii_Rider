<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/new_cart_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/pad_15">

        <RelativeLayout
            android:id="@+id/cart_relative"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/new_booking_cart_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/new_booking_cart_price">

                <com.kamaii.rider.utils.CustomTextViewBold
                    android:id="@+id/new_booking_cart_prd_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Gujarati Thali Small"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLength="30"
                    android:includeFontPadding="true"
                    android:textColor="@color/dark_blue_color"
                    android:textSize="@dimen/dp_14" />

                <com.kamaii.rider.utils.CustomTextViewBold
                    android:id="@+id/new_booking_cart_prd_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@+id/new_booking_cart_prd_name"
                    android:text="09"
                    android:textColor="@color/pink_color"
                    android:textSize="@dimen/dp_16" />
            </LinearLayout>

            <com.kamaii.rider.utils.CustomTextViewBold
                android:id="@+id/new_booking_cart_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="247"
                android:visibility="gone"
                android:textColor="#2B2B2B" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/instruction_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_relative"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@drawable/blue_border_bg"
            android:backgroundTint="@color/light_blue"
            android:paddingLeft="@dimen/margin_10">

            <com.kamaii.rider.utils.CustomTextViewBold
                android:id="@+id/cooking_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/pink_color"
                android:padding="@dimen/dimen_5dp"
                android:text="Cooking Instruction"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_12dp" />

            <com.kamaii.rider.utils.CustomTextViewBold
                android:id="@+id/cooking_instruction_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cooking_instruction"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:text="Need Lil bit Spicy"
                android:textColor="@color/dark_blue_color"
                android:textSize="@dimen/dp_14" />
        </RelativeLayout>

    </RelativeLayout>

</layout>