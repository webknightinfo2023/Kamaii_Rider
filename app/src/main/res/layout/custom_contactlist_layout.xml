<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/contactlist_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="0dp"
    android:background="@drawable/custom_curved_background">

    <RelativeLayout
        android:id="@+id/contactlist_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_curved_background"
        android:padding="@dimen/margin_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.kamaii.rider.utils.CustomTextView
                android:id="@+id/partner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:text="asdasd"/>

            <com.kamaii.rider.utils.CustomTextView
                android:id="@+id/partner_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="asdasd"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/favourite_icon"
            android:layout_width="@dimen/pad_20"
            android:layout_height="@dimen/pad_20"
            android:background="@drawable/unselected_fav"
            android:layout_toLeftOf="@+id/contactlist_send_btn"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_centerVertical="true"/>

        <com.kamaii.rider.utils.CustomTextView
            android:id="@+id/contactlist_send_btn"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="Refer"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:background="@drawable/custom_btn_colored_background"
            android:backgroundTint="#02A7F6"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>